# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=opendq
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable

# OIDC Authentication (Keycloak)
# After starting Keycloak, configure a client and update these values
OIDC_ISSUER=http://localhost:8180/realms/master
OIDC_CLIENT_ID=opendq-client
OIDC_CLIENT_SECRET=your_client_secret_here
OIDC_REDIRECT_URL=http://localhost:8080/auth/callback

# OpenFGA Authorization
# After creating a store in OpenFGA, update these values
OPENFGA_STORE_ID=
OPENFGA_API_HOST=http://localhost:8081
OPENFGA_AUTH_MODEL=

# Multi-Tenancy
MULTITENANT_ENABLED=true
MULTITENANT_ISOLATION=namespace

# OpenLineage Integration
OPENLINEAGE_ENABLED=true
OPENLINEAGE_ENDPOINT=http://localhost:5000
OPENLINEAGE_NAMESPACE=opendq
